@using App.WebInfo.Business
@model App.WebInfo.MVCUI.Models.PersonalViewModel

@{
    ViewBag.Title = "Yabancı Listesi";
    ViewBag.isMenuLink = "/Yabancı";
    ViewBag.SubTitle = "Yabancı";
    ViewBag.SubDescription = "Yabancı Listesi";
}

<!-- Main content -->
<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-xs-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->

            <div class="portlet light portlet-fit portlet-datatable bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-layers font-green"></i>
                        <span class="caption-subject font-green sbold uppercase">Yabancı Listesi</span>

                    </div>
                </div>



                <div class="portlet-body">

                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                @if (Model.SessionUser.IsCreate)
                                {
                                    <div class="btn-group">
                                        <a class="btn btn-insert sbold green" asp-action="Create">Yeni Yabancı Ekle <i class="fa fa-plus"></i></a>

                                    </div>
                                }
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>

                    <table class="table table-striped table-bordered table-hover order-column" id="sample_2" data-servurl="/Personal/GetList">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.Adi)</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.Soyadi)</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.SahisNo)</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.AileNo)</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.AnaAdi)</th>
                                <th>@Html.DisplayNameFor(m => m.Personal.BabaAdi)</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</section>
